# Application
APP_NAME=DeepThought
DEBUG=false
LOG_LEVEL=INFO

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=dummy
AWS_SECRET_ACCESS_KEY=dummy

# DynamoDB Tables
DYNAMODB_USERS_TABLE=deepthought-users
DYNAMODB_PAIRS_TABLE=deepthought-pairs
DYNAMODB_LOGS_TABLE=deepthought-logs
DYNAMODB_CALENDAR_TABLE=deepthought-calendar
DYNAMODB_TODOS_TABLE=deepthought-todos
DYNAMODB_CONVERSATIONS_TABLE=deepthought-conversations
DYNAMODB_MESSAGES_TABLE=deepthought-messages

# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=deepthought-hybrid-rag
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1
PINECONE_DIMENSIONS=1024
PINECONE_METRIC=dotproduct

# DynamoDB Endpoints
DYNAMODB_ENDPOINT_URL=http://localhost:8000
DC_DYNAMODB_ENDPOINT=http://deepthought-dynamodb:8000

# JWT
JWT_SECRET_KEY=change-this-secret-key-in-production

# LLM Configuration
LLM_MODEL=gemini-2.0-flash
GOOGLE_API_KEY=add-your-google-api-key-here

# CORS (comma-separated origins)
CORS_ORIGINS=["http://localhost:3000"]
